
<form action="/suggestions" method="PUT">
    <h3><%= @question.text %></h3>
    <% @question.answers.each do |answer| %>
 
  <div class="radio">
  <label>
    <input type="radio" name="answer" id=<%= answer.id %> value=<%= answer.id %>>
    <%= answer.text %>
  </label>
</div>
  <% end %>
 
  <button type="submit" class="btn btn-default">Submit</button>
</form>
